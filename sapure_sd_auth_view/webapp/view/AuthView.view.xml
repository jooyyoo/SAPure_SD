<mvc:View controllerName="zc503sd.gw0004.sapuresdauthview.controller.AuthView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <FlexBox
        class="mainContainer"
        direction="Row"
        justifyContent="Center"
        alignItems="Center">
        <VBox class="loginPanel">
            <VBox alignItems="Center">
                <Title text="LOG IN" level="H2" class="loginTitle" />
            </VBox>
            <VBox alignItems="Start" width="100%">
                <Label text="아이디" class="textColor"/>
                <Input id="Iid" type="Text" placeholder="아이디를 입력해주세요" showClearIcon="true" class="inputField" />
                <Label text="비밀번호" class="textColor"/>
                <Input type="Password" placeholder="비밀번호를 입력해주세요" width="20rem" class="inputField" showClearIcon="true"/>
                <Link id="Ipw" text="비밀번호를 잊으셨나요?" class="forgotPassword" press="onLinkPress" ariaHasPopup="Dialog" />
                <Button
                    press="onPressLogin"
                    text="로그인"
                    type="Default"
                    class="loginButton textColor" />
            </VBox>
        </VBox>
    </FlexBox>
</mvc:View>
