<mvc:View controllerName="zc503sd.gw0001.sapuresdfertview.controller.FertView"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
    xmlns:f="sap.f"
	  xmlns:card="sap.f.cards"
	  xmlns:core="sap.ui.core"
	  xmlns:w="sap.ui.integration.widgets">
    <Page id="page" title="{i18n>title}">
    
    <HBox >
    
    <VBox renderType="Bare" alignItems="Start" height="100%">
		<tnt:SideNavigation id="sideNavigation" selectedKey="walked" expanded="{expand>/expanded}">
			<tnt:NavigationList>
                <tnt:NavigationListItem text="" icon="{= ${expand>/expanded} ? 'sap-icon://slim-arrow-left' : 'sap-icon://slim-arrow-right' }" select="onCollapseExpandPress" />
				<tnt:NavigationListItem text="Home" icon="sap-icon://home" />
				<tnt:NavigationListGroup text="New">
					<tnt:NavigationListItem text="Material" icon="sap-icon://blur">
						<tnt:NavigationListItem text="정수기" id="fert"/>
						<tnt:NavigationListItem text="부품" id="bom"/>
					</tnt:NavigationListItem>
				</tnt:NavigationListGroup>
				<tnt:NavigationListGroup text="Recently used">
					<tnt:NavigationListItem text="MyPage" icon="sap-icon://kpi-managing-my-area" />
				</tnt:NavigationListGroup>
				<tnt:NavigationListGroup text="Restricted" enabled="false">
					<tnt:NavigationListItem text="Running" icon="sap-icon://physical-activity" />
					<tnt:NavigationListItem text="Scissors" icon="sap-icon://scissors" />
				</tnt:NavigationListGroup>
				<tnt:NavigationListItem text="Transport" icon="sap-icon://passenger-train" />
			</tnt:NavigationList>
			<tnt:fixedItem>
				<tnt:NavigationList>
					<tnt:NavigationListItem text="Bar Chart" icon="sap-icon://bar-chart" />
					<tnt:NavigationListItem selectable="false" href="https://sap.com" target="_blank" text="External Link" icon="sap-icon://attachment" />
					<tnt:NavigationListItem text="Compare" icon="sap-icon://compare" />
				</tnt:NavigationList>
			</tnt:fixedItem>
		</tnt:SideNavigation>
	</VBox>
    
    <VBox>

    <ScrollContainer vertical="true" width="100%">
      <FlexBox
        direction="Row"
        wrap="Wrap"
        alignItems="Start"
        justifyContent="SpaceAround"
        class="productCatalogContainer"
        items ="{/FertSet}">
        <!-- 제품 타일 -->
        <CustomListItem class="productParent">

          <VBox width="auto" alignItems="Center" >
            <Image src="images/water1.png" width="80%" class="productImage" press="onPressMatnr"/>
            <Text text="{Matnr}" class="productTitle" />
            <Text text="{Maktx}" class="productDescription" />
            <Text text="{     parts:[{path:'Netpr'},{path:'Waers'}],
                              type: 'sap.ui.model.type.Currency',
                              formatOptions: {showMeasure: true }
                              }" wrapping="false" 
                              class="productPrice"/>
          </VBox>
        </CustomListItem>
        
      </FlexBox>
    </ScrollContainer>
    </VBox>
    </HBox>
    </Page>
</mvc:View>
